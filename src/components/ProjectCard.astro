---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import { marked } from 'marked';

interface Props {
	project: CollectionEntry<'projects'>;
	variant?: 'full' | 'preview';
}

const { project, variant = 'full' } = Astro.props;

// Helper function to strip outer <p> tags from parsed markdown
function stripParagraphTags(html: string): string {
	// Remove leading <p> and trailing </p> with any whitespace/newlines
	return html.replace(/^\s*<p>|<\/p>\s*$/g, '').trim();
}

// Helper function to parse markdown and strip paragraph tags
function parseMarkdown(markdown: string): string {
	const parsed = marked.parse(markdown) as string;
	// Strip outer <p> tags and any trailing whitespace/newlines
	return stripParagraphTags(parsed);
}
---

{variant === 'full' ? (
	<section class={`project--big project--big--semitop ${project.data.niceName}`}>
		<div class="project--big__header">
			<h4>
				<a class="text_link text_link--fwnormal project--big__title" href={`${import.meta.env.BASE_URL}projects/${project.id}/`}>
					<strong>{project.data.title}</strong><span> - </span>{project.data.shortDescription}
				</a>
			</h4>
		</div>
		<div class={`project__items ${project.data.niceName}`}>
			<a class="two--l" href={`${import.meta.env.BASE_URL}projects/${project.id}/`}>
				{project.data.heroImage && (
					<Image width={720} height={360} src={project.data.heroImage} alt="" />
				)}
				<h6 class="lg-only">
					{project.data.title} <span>{project.data.pubDate.getFullYear()}</span>
				</h6>
			</a>
			<div class="project__item__description">
				<p set:html={parseMarkdown(project.data.description)} />
				{project.data.tags && (
					<ul class="project__item__tags">
						{project.data.tags.map((tag) => (
							<li><span class="project__item__tag">{tag}</span></li>
						))}
					</ul>
				)}
				<a href={`${import.meta.env.BASE_URL}projects/${project.id}/`} class="text_link text_link--on_dark">
					<strong>Read more</strong>
				</a>
			</div>
		</div>
	</section>
) : (
	<article class="project--preview">
		<a class="project--preview__thumb" href={`${import.meta.env.BASE_URL}projects/${project.id}/`}>
			{project.data.heroImage && (
				<Image 
					width={800} 
					height={400} 
					src={project.data.heroImage} 
					alt={project.data.title}
					format="webp"
				/>
			)}
		</a>
		<div class="project--preview__info">
			<h4 class="project--preview__title">
				<a class="text_link text_link--on_dark" href={`${import.meta.env.BASE_URL}projects/${project.id}/`}>
					<strong>{project.data.title}</strong>
				</a>
        <span set:html={parseMarkdown(project.data.shortDescription)} />
			</h4>
			{project.data.tags && (
				<ul class="project__item__tags">
					{project.data.tags.map((tag) => (
						<li><span class="project__item__tag">{tag}</span></li>
					))}
				</ul>
			)}
			<a href={`${import.meta.env.BASE_URL}projects/${project.id}/`} class="link--intext link--intext--on_dark">
				<strong>View project</strong>
			</a>
		</div>
	</article>
)}

